generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  password    String
  email       String   @unique
  phoneNumber String
  role        ROLE @default(CUSTOMER)
  createdAt   DateTime @default(now())
  cart        Cart?
  order       Order[]
}

model Product {
  id              Int         @id @default(autoincrement())
  productName     String
  description     String
  price           Int
  stock           Int
  status          STATUS      @default(ACTIVE)
  productCategory Category
  createdAt       DateTime    @default(now())
  cartItem        CartItem[]
  orderItem       OrderItem[]
}

model Order {
  id         Int         @id @default(autoincrement())
  userId     Int
  totalPrice Int
  status     OrderStatus @default(ON_THE_WAY)
  payStatus  PayStatus   @default(FAILED)
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  items      OrderItem[]
  payment    Payment?

  @@index([userId], map: "Order_userId_fkey")
}

model Payment {
  id        Int       @id @default(autoincrement())
  orderId   Int       @unique
  payStatus PayStatus @default(FAILED)
  payMethod Pay
  createdAt DateTime  @default(now())
  order     Order     @relation(fields: [orderId], references: [id])
}

model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])
  items     CartItem[]
}

model CartItem {
  id        Int     @id @default(autoincrement())
  cartId    Int
  productId Int
  quantity  Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([cartId], map: "CartItem_cartId_fkey")
  @@index([productId], map: "CartItem_productId_fkey")
}

model OrderItem {
  id           Int     @id @default(autoincrement())
  orderId      Int
  productId    Int
  productName  String
  productPrice Int
  quantity     Int
  order        Order   @relation(fields: [orderId], references: [id])
  product      Product @relation(fields: [productId], references: [id])

  @@index([orderId], map: "OrderItem_orderId_fkey")
  @@index([productId], map: "OrderItem_productId_fkey")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
  status    ISSUE    @default(IN_PROGRESS)
}

enum ROLE {
  ADMIN
  CUSTOMER
}

enum Category {
  NUMEROLOGY
  TAROT
  REIKI_HEALING
  CRYSTAL
}

enum STATUS {
  ACTIVE
  INACTIVE
}

enum Pay {
  CARD
  COD
  PHONEPAY
  EMI
}

enum OrderStatus {
  DELIVERED
  ON_THE_WAY
  CANCELLED
}

enum PayStatus {
  FAILED
  SUCCESS
}

enum ISSUE {
  RESOLVED
  IN_PROGRESS
}
